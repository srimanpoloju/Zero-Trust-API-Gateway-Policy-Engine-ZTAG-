{
  "name": "ztag-platform",
  "version": "1.0.0",
  "description": "Zero-Trust API Gateway & Policy Engine",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
